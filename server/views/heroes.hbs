<h1>Heroes!</h1>
<form action="/heroes" method="POST">
	<input type="text" placeholder="Name" name="name"/>
	<input type="text" placeholder="Movie" name="movie"/>
	<input type="text" placeholder="Super Power" name="power"/>
	<input type="text" placeholder="Height" name="height"/>
	<input type="submit" value="Submit!"/>
</form>
<table border="1">
	{{#each heroesArray}}
	{{!-- assigns id to a row. mongo is creating the id. can be data-anything --}}
	<tr data-id="{{this.id}}">
		<td>
			<input = type="text" value="{{ this.name }}" class="name"/>
		</td>
		<td>
			<input = type="text" value="{{ this.movie }}" class="movie"/>
		</td>
		<td>
			<input = type="text" value="{{ this.power }}" class="power"/>
		</td>
		<td>
			<input = type="text" value="{{ this.height }}" class="height"/>
		</td>
		<td>
			<button class="edit-heroes">SAVE</button>
		</td>
		<td>
			<button class ="delete-heroes">DELETE</button>
		</td>
	</tr>
	{{/each}}
</table>
