<h1>Heroes</h1>

<form action="/heroes" method="POST">
	<input type="text" placeholder="Name" name="name"/>
	<input type="text" placeholder="Movie" name="movie"/>
	<input type="text" placeholder="Super Power" name="power"/>
	<input type="text" placeholder="Height" name="height"/>
	<input type="submit" value="Submit!"/>
</form>
<br>
<table border="1">
	{{#each heroesArray}}
	<tr>
		<td>
			{{ this.name }}  <!-- this refers to the specific villian being indexed-->
		</td>
		<td>
			{{ this.movie }}
		</td>
		<td>
			{{ this.power }}
		</td>
		<td>
			{{ this.height }}
		</td>
		<td>
			<button class="edit">
				EDIT
			</button>	
		</td>
		<td>
			<button class="delete">
				DELETE
			</button>	
		</td>
	</tr>
	{{/each}}
</table>